{
  "name": "gc-shared-resources",
  "version": "1.1.2",
  "description": "Shared resources for Guardian Connector Nuxt.js applications",
  "type": "module",
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
    "format": "prettier \"**/*.{js,ts,jsx,tsx,vue}\" --write",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "link": "pnpm link",
    "lint:prettier": "prettier ./ --check --ignore-path .prettierignore",
    "lint:eslint": "eslint . --cache",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@nuxt/devtools": "^1.4.2",
    "@nuxt/module-builder": "^0.8.3",
    "@nuxt/schema": "^3.13.1",
    "@nuxt/test-utils": "^3.14.2",
    "@types/node": "latest",
    "@vue/test-utils": "^2.4.6",
    "changelogen": "^0.5.5",
    "eslint": "^9.11.1",
    "eslint-config-flat-gitignore": "^2.0.0",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.9.0",
    "husky": "^9.0.11",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.7",
    "nuxt": "^3.13.0",
    "prettier": "^3.3.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^3.0.5",
    "vue-i18n": "^11.1.0",
    "vue-tsc": "^2.1.6"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,vue}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "20.15.0"
  },
  "author": "Conservation Metrics",
  "license": "MIT"
}
